<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:id="@+id/frame3"
        android:layout_below="@+id/frame4"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="251dp"
            android:layout_height="20dp"
            android:text="Can we get back to you?"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/container"
        >

        <TextView
            android:id="@+id/nav"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif"
            android:text="Dzidzi"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:padding="3dp"
            app:srcCompat="@drawable/menu" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/container"
        android:id="@+id/frame"
        android:paddingTop="5dp"
        android:layout_marginTop="20dp"
        >

        <FrameLayout
            android:layout_width="322dp"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textdislay"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Feedback"
                android:textSize="36sp"/>
        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/frame"
        android:layout_marginTop="20dp"
        android:id="@+id/frame1"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="251dp"
            android:layout_height="20dp"
            android:text="What do you think about out recipes?"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_below="@id/frame1"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/frame2"

        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Not at all satisfied"
                android:id="@+id/button1"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Somewhat unsatisfied"
                android:layout_marginTop="10dp"
                />


            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Neutral"
                android:layout_marginTop="10dp"/>


            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Somewhat satisfied"
                android:layout_marginTop="10dp" />



            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Completely satisfied"
                android:layout_marginTop="10dp" />



        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_below="@+id/frame2"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:id="@+id/frame4"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="251dp"
            android:layout_height="20dp"
            android:text="Do you have other inputs for us?"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp" />


    </RelativeLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@+id/frame3"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2C192F"
        android:text="Submit" />



</RelativeLayout>
